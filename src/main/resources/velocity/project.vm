                <nav id="chatNav" data-userId="$userId" data-projectId="$projectId">
                    <!--enter list of chat messages here-->
                    <div id="chat">
                        #foreach($message_map in $messages)
                            #set($firstname = $!message_map.get("firstname"))
                            #set($lastname = $!message_map.get("lastname"))
