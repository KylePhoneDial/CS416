<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Password</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        #foreach($map in $users)
            <tr>
                <td><div style="padding-top: 5px;">$!map.userId</div></td>
                <td><div style="padding-top: 5px;">$!map.firstName</div></td>
                <td><div style="padding-top: 5px;">$!map.lastName</div></td>
                <td><div style="padding-top: 5px;">$!map.email</div></td>
                <td><div style="padding-top: 5px;">$!map.password</div></td>

                <td>
                    <div style="padding-top: 5px;" class="glyphicon glyphicon-user" type="button" data-userId="$!map.userId" data-toggle="modal" data-target="#updateModal"><a href="#">Modify User</a></div>
                    <div style="padding-top: 5px;"  type="button">
                        <span data-userId="$!map.userId" class="glyphicon glyphicon-trash deleteUser"></span>
                    </div>
##                                                                     //^ use jquery to set up a click handler for this deleteUser class

                </td>
            </tr>


        #end
    </tbody>
</table>


##    for some reason leaving the "fade" class on this modal
##    causes the background to remain greyed out on occasion
##    thus it has been removed. See this SO post for the solution:
##    http://stackoverflow.com/a/34665045
    <div class="modal" id="updateModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true"></span></button>
                </div>
                <div class="modal-body">
                    <form>
                        First Name:<br>
##                         use jquery to grab the input values below using the .val() function
##                        e.g $('#newFirstName').val() Note: to select a class in jquery
##                        use: $('.className').someMethod(). To get an id use: $('#idName').someMethod())
                        <input id="newFirstName" type="text" name="firstName"><br>
                        Last Name:<br>
                        <input id="newLastName" type="text" name="lastName"><br>
                        Email:<br>
                        <input id="newEmail" type="text" name="email"><br>
                        Password:<br>
                        <input id="newPassword" type="text" name="password"><br>
                    </form>
                </div>
                <div class="modal-footer">
                    <button  type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button id="submitChanges" data-dismiss="modal" type="button" class="btn btn-primary">Submit Changes</button>
                </div>
            </div>
        </div>
    </div>
