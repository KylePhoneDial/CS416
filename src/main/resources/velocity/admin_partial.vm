<table class="table table-striped">
    <thread>
        <tr>
            <th>Id</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Password</th>
        </tr>
    </thread>
    <tbody>
        #foreach($map in $users)
            <tr>
                <td>$map.userId</td>
                <td>$map.firstName</td>
                <td>$map.lastName</td>
                <td>$map.email</td>
                <td>$map.password</td>


                <tr>
                   <div class="container">
                    <button type="button" class="btn btn-primary col-sm-12" data-toggle="modal" data-target="#upUser">
                       Update User
                   </button>
                  <div class="modal fade" id="upUser" role="dialog">
                      <div class="modal-dialog">

                          <div class="modal-content">
                              <div class="modal-header">
                                  <button  type="button" class="close" data-dismiss="modal">&times;</button>
                                  <h4 class="modal-title">Update User</h4>
                              </div>
                                  <form method="post" action="/user">
                                      First Name: <br>
                                      <input type="text" name="firstname"><br>
                                      Last Name: <br>
                                      <input type="text" name="lastname"><br>
                                      Email: <br>
                                      <input type="text" name="email"><br>
                                      Password: <br>
                                      <input type="text" name="password"><br>
                                      <input type="submit" value="Update">
                                  </form>
                              </div>
                          </div>
                      </div>
                  </div>


                    <div class="btn btn-warning col-sm-12">Delete User</div>
                </tr>
        </tr>

        #end
    </tbody>
</table>