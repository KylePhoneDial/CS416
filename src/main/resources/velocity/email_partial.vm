<table class="table table-striped">
    <thead>
    <tr>
        <th>From</th>
        <th>Subject</th>
        <th>Arrival</th>
        <th>Actions</th>
    </tr>
    </thead>
<tbody>

<!--create a new  table row ( <tr> ) for each email-->
<!--
        the data-target attribute references a unique modal.
        Therefore, in the data-target attribute below use the following code:
        "#email$ foreach.count"
        see the modal code below for more details
    -->
#foreach($map in $email)
<tr>
    <td><div style="padding-top: 5px;">$DAO.getEmailByUserId($map.from)</div></td>
    <td><div style="padding-top: 5px;" type="button" data-toggle="modal" data-target="#email$foreach.count"><a href="#">$map.subject</a></div></td>
    <td><div style="padding-top: 5px;"><span class="badge">$map.time</span></div></td>
    <td><span style="font-size: 140%" data-eid="$map.id"  class=" glyphicon glyphicon-trash deleteEmail"><span style="padding-left: 20px; font-size: 150%" class=" glyphicon glyphicon-share-alt"></span></td>
</tr>
#end
</tbody>
</table>

<button type="button" class="pull-right btn btn-success" data-toggle="modal" data-target="#compose">Compose</button>

<div class = "modal fade" id="compose" tabindex="-1">
    <div class = "modal-dialog" >
        <div class = "modal-content">
            <div class = "modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label=""Close"><span aria-hidden = "true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Compose Email</h4>
            </div>

        ##                         use jquery to grab the input values below using the .val() function
        ##                        e.g $('#newFirstName').val() Note: to select a class in jquery
        ##                        use: $('.className').someMethod(). To get an id use: $('#idName').someMethod())
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="toInput">To</label>
                        <input type="text" class="form-control"
                               id="toInput" placeholder="Enter recepient address"/>
                    </div>
                    <div class="form-group">
                        <label for="subjectInput">Subject</label>
                        <input type="text" class="form-control"
                               id="subjectInput" placeholder="Enter Subject"/>
                    </div>
                    <div class="form-group">
                        <label for="messageInput">Body</label>
                        <input type="text" class="form-control"
                               id="messageInput" placeholder="Enter message"/>
                    </div>
                </form>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-default"
                        data-dismiss="modal">
                    Discard
                </button>
                <button id = "submitEmailButton" type="button" class="btn btn-primary">
                    Send
                </button>
            </div>
        </div>
    </div>
</div>

<!--create a new modal for each email-->
<!--
    http://velocity.apache.org/engine/1.7/user-guide.html
    see the docs link above for the $ foreach.count variable.

    so that each modal has a unique id, use the
    naming convention:
    email$ foreach.count

-->
<!--repeat this block of code for each email-->
#foreach($map in $email)
<div class="modal fade" id="email$foreach.count" tabindex="-1" >
    <div class="modal-dialog" >
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">$map.subject</h4>
            </div>
            <div class="modal-body">
                <pre>$map.body</pre>
            </div>
        </div>
    </div>
</div>
<!--end repeat block-->
#end

